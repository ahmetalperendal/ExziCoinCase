<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="@color/colorDark"
    android:gravity="center"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:id="@+id/buy_weight_bg_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/order_book_weight_bg" />

        <LinearLayout
            android:id="@+id/buy_weight_bg_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quantity_buy_txt"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/montserrat"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="left"
                android:singleLine="true"
                android:text="Amount"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buy_price_txt"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/montserrat"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center_vertical|end"
                android:text="Price"
                android:textColor="@color/connected"
                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/is_my_order_buy_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:padding="2.5dp"
                android:src="@drawable/connected_shape"
                android:tint="@color/buyColor" />


        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:id="@+id/sell_weight_bg_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/order_book_sell_weight_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="6dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/is_my_order_sell_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:padding="2.5dp"
                android:src="@drawable/disconnected_shape"
                android:tint="@color/sellColor" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sell_price_txt"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/montserrat"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:text="Price"
                android:textColor="@color/sellColor"
                android:textSize="12sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sell_quantity_txt"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/montserrat"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="right"
                android:singleLine="true"
                android:text="Amount"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>